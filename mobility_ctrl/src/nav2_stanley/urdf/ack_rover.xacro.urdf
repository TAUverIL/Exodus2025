<?xml version="1.0"?>
<robot name="ack_rover" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="inertial_macros.xacro.urdf"/>
  <xacro:include filename="ack_rover_gazebo.xacro.urdf"/>

  <!-- Colours -->
  <material name="Black">
    <color rgba="0 0 0 1" />
  </material>
  <material name="Grey">
    <color rgba="0.8 0.8 0.8 1" />
  </material>
  <material name="Orange">
    <color rgba="1 0.6 0 1" />
  </material>
  <material name="White">
    <color rgba="1 1 1 1" />
  </material>
  <material name="Blue">
    <color rgba="0.2 0.2 1 1" />
  </material>
  
    <!-- Origin Parameters -->
    <xacro:property name="origin_xy" value="0 0 0"/>
    <xacro:property name="origin_rpy" value="0 0 0"/>
  
    <!-- Chassis Parameters -->
    <xacro:property name="chassis_length" value="2"/>
    <xacro:property name="chassis_width" value="1"/>
    <xacro:property name="chassis_height" value="0.5"/>
    <xacro:property name="chassis_offset_x" value="0"/>
    <xacro:property name="chassis_offset_y" value="0"/>
    <xacro:property name="chassis_offset_z" value="0.5"/>
    <xacro:property name="chassis_mass" value="0.5"/>

    <!-- Wheel Parameters -->
    <xacro:property name="pi_div_2" value="1.57"/>
    <xacro:property name="wheel_length" value="0.08"/>
    <xacro:property name="wheel_radius" value="0.3"/>
    <xacro:property name="wheel_mass" value="11.3"/>
    <xacro:property name="wheel_offset_x" value="0.8"/>
    <xacro:property name="wheel_offset_y" value="0.5"/>
    <xacro:property name="wheel_offset_z" value="0.3"/>
    <xacro:property name="wheel_damping" value="0.2"/>
    <xacro:property name="wheel_axis" value="0 0 1"/>

    <!-- Steering Parameters -->
    <xacro:property name="steering_mass" value="0.1"/>
    <xacro:property name="steering_offset_x" value="0.9"/>
    <xacro:property name="steering_axis" value="0 1 0"/>
    <xacro:property name="steering_effort" value="1000.0"/>
    <xacro:property name="steering_limit_upper" value="${pi_div_2}"/>
    <xacro:property name="steering_limit_lower" value="-${pi_div_2}"/>
    <xacro:property name="steering_velocity" value="30"/>

    <!-- IMU Parameters -->
    <xacro:property name="imu_mass" value="0.1"/>
    <xacro:property name="imu_length_x" value="0.1"/>
    <xacro:property name="imu_length_y" value="0.1"/>
    <xacro:property name="imu_height" value="0.1"/>
    <xacro:property name="imu_position" value="0 0 ${chassis_height+imu_height/2}"/>

    <!-- Base Link -->
    <link name="base_link" />

    <!-- Base_Footprint Link -->

    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <link name="base_footprint">
    </link>

  <!-- Chassis -->

  <!-- Chassis Fixed Joint -->
  <joint name="chassis_joint" type="fixed">

      <origin xyz="${chassis_offset_x} ${chassis_offset_y} ${chassis_offset_z}" rpy="0 0 0" />
      <parent link="base_link" />
      <child link="chassis" />

  </joint>
  
  <!-- Chassis Link -->
  <link name="chassis">

    <visual>
      <origin xyz="${chassis_offset_x}  ${chassis_offset_y} ${chassis_offset_z}" rpy="${origin_rpy}" />
      <geometry>
        <box size="${chassis_length} ${chassis_width} ${chassis_height}" />
      </geometry>
      <material name="Orange" />
    </visual>

    <collision>
        <origin xyz="${chassis_offset_x} 0 ${chassis_height/2}"/>
        <geometry>
            <box size="${chassis_length} ${chassis_width} ${chassis_height}"/>
        </geometry>
    </collision>

    <xacro:inertial_box mass="${chassis_mass}" x="${chassis_length}" y="${chassis_width}" z="${chassis_height}">
        <origin xyz="${chassis_length/2} 0 ${chassis_height/2}" rpy="${origin_rpy}"/>
    </xacro:inertial_box>

  </link>

  <!-- Rear Wheels -->

  <!-- Rear Left Wheel Link -->
  <link name="rear_left_wheel">

    <collision>
      <geometry>
        <cylinder length="${wheel_length}" radius="${wheel_radius}" />
      </geometry>
    </collision>

    <visual>
      <geometry>
        <cylinder length="${wheel_length}" radius="${wheel_radius}" />
      </geometry>
      <material name="Blue" />
    </visual>

    <xacro:inertial_cylinder mass="${wheel_mass}" length="${wheel_length}" radius="${wheel_radius}">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>

  </link>

  <joint name="rear_left_wheel_joint" type="continuous">

    <origin xyz="-${wheel_offset_x} ${wheel_offset_y} ${wheel_offset_z}" rpy="-${pi_div_2} 0 0" />
    <parent link="chassis" />
    <child link="rear_left_wheel" />
    <axis xyz="${wheel_axis}" />
    <dynamics damping="${wheel_damping}" />

  </joint>

  <!-- Rear Right Wheel Link -->
  <link name="rear_right_wheel">

    <collision>
      <geometry>
        <cylinder length="${wheel_length}" radius="${wheel_radius}" />
      </geometry>
    </collision>

    <visual>
      <geometry>
        <cylinder length="${wheel_length}" radius="${wheel_radius}" />
      </geometry>
      <material name="Blue" />
    </visual>

    <xacro:inertial_cylinder mass="${wheel_mass}" length="${wheel_length}" radius="${wheel_radius}">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>

  </link>

  <joint name="rear_right_wheel_joint" type="continuous">

    <origin xyz="-${wheel_offset_x} -${wheel_offset_y} ${wheel_offset_z}" rpy="-${pi_div_2} 0 0" />
    <parent link="chassis" />
    <child link="rear_right_wheel" />
    <axis xyz="${wheel_axis}" />
    <dynamics damping="${wheel_damping}" />

  </joint>

  <!-- Front Wheels -->

  <!-- Left Steering Link -->
  <link name="left_wheel_steering">

    <inertial>
      <mass value="${steering_mass}"/>
      <inertia ixx="0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0" />
    </inertial>

  </link>

  <joint name="left_wheel_steering_joint" type="revolute">

    <origin xyz="${steering_offset_x} -${wheel_offset_y} ${wheel_offset_z}" rpy="${pi_div_2} 0 0" />
    <parent link="chassis" />
    <child link="left_wheel_steering" />
    <axis xyz="${steering_axis}" />
    <dynamics damping="${wheel_damping}" />
    <limit effort="${steering_effort}" lower="${steering_limit_lower}" upper="${steering_limit_upper}" velocity="${steering_velocity}"/>

  </joint>

  <!-- Right Steering Link -->
  <link name="right_wheel_steering">

    <inertial>
      <mass value="${steering_mass}"/>
      <inertia ixx="0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0" />
    </inertial>

  </link>

  <joint name="right_wheel_steering_joint" type="revolute">

    <origin xyz="${steering_offset_x} ${wheel_offset_y} ${wheel_offset_z}" rpy="${pi_div_2} 0 0" />
    <parent link="chassis" />
    <child link="right_wheel_steering" />
    <axis xyz="${steering_axis}" />
    <dynamics damping="${wheel_damping}" />
    <limit effort="${steering_effort}" lower="${steering_limit_lower}" upper="${steering_limit_upper}" velocity="${steering_velocity}"/>

  </joint>

  <!-- Front Left Wheel Link -->
  <link name="front_left_wheel">

    <collision>
      <geometry>
        <cylinder length="${wheel_length}" radius="${wheel_radius}" />
      </geometry>
    </collision>

    <visual>
      <geometry>
        <cylinder length="${wheel_length}" radius="${wheel_radius}" />
      </geometry>
      <material name="Black" />
    </visual>

    <xacro:inertial_cylinder mass="${wheel_mass}" length="${wheel_length}" radius="${wheel_radius}">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>

  </link>

  <joint name="front_left_wheel_joint" type="continuous">

    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="left_wheel_steering" />
    <child link="front_left_wheel" />
    <axis xyz="${wheel_axis}" />
    <dynamics damping="${wheel_damping}" />

  </joint>

  <!-- Front Right Wheel Link -->
  <link name="front_right_wheel">

    <collision>
      <geometry>
        <cylinder length="${wheel_length}" radius="${wheel_radius}" />
      </geometry>
    </collision>

    <visual>
      <geometry>
        <cylinder length="${wheel_length}" radius="${wheel_radius}" />
      </geometry>
      <material name="Black" />
    </visual>

    <xacro:inertial_cylinder mass="${wheel_mass}" length="${wheel_length}" radius="${wheel_radius}">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>

  </link>

  <joint name="front_right_wheel_joint" type="continuous">

    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="right_wheel_steering" />
    <child link="front_right_wheel" />
    <axis xyz="${wheel_axis}" />
    <dynamics damping="${wheel_damping}" />

  </joint>

  <!-- IMU -->
  <link name="imu_link">
        <visual>
            <geometry>
                <box size="${imu_length_x} ${imu_length_y} ${imu_height}" />
            </geometry>
            <material name="Cyan">
                <color rgba="0 1.0 1.0 1.0" />
            </material>
        </visual>

        <collision>
            <geometry>
                <box size="${imu_length_x} ${imu_length_y} ${imu_height}" />
            </geometry>
        </collision>

        <inertial>
            <mass value="${imu_mass}" />
            <inertia ixx="0.145833" ixy="0.0" ixz="0.0" iyy="0.145833" iyz="0.0" izz="0.125" />
        </inertial>
  </link>

<joint name="imu_joint" type="fixed">
  <parent link="chassis" />
  <child link="imu_link" />
  <origin xyz="${imu_position}" />
</joint>  

<gazebo reference="imu_link">
  <sensor name="imu_sensor" type="imu">
    <plugin filename="libignition-gazebo-imu-system.so" name="ignition::gazebo::systems::Imu">
      <initial_orientation_as_reference>false</initial_orientation_as_reference>
    </plugin>
    <always_on>true</always_on>
    <update_rate>100</update_rate>
    <visualize>true</visualize>
    <topic>/imu</topic>
    <enable_metrics>true</enable_metrics>
    <imu>
      <angular_velocity>
          <x>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
              <bias_mean>0.0000075</bias_mean>
              <bias_stddev>0.0000008</bias_stddev>
            </noise>
          </x>
          <y>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
              <bias_mean>0.0000075</bias_mean>
              <bias_stddev>0.0000008</bias_stddev>
            </noise>
          </y>
          <z>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>2e-4</stddev>
              <bias_mean>0.0000075</bias_mean>
              <bias_stddev>0.0000008</bias_stddev>
            </noise>
          </z>
        </angular_velocity>

        <linear_acceleration>
          <x>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
              <bias_mean>0.1</bias_mean>
              <bias_stddev>0.001</bias_stddev>
            </noise>
          </x>
          <y>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
              <bias_mean>0.1</bias_mean>
              <bias_stddev>0.001</bias_stddev>
            </noise>
          </y>
          <z>
            <noise type="gaussian">
              <mean>0.0</mean>
              <stddev>1.7e-2</stddev>
              <bias_mean>0.1</bias_mean>
              <bias_stddev>0.001</bias_stddev>
            </noise>
          </z>
        </linear_acceleration>
      </imu>
    </sensor>

    <plugin filename="libros_ign_bridge.so" name="ros_ign_bridge">
      <!-- ROS topic where the IMU data will be published -->
      <ros_topic>/imu/data</ros_topic>
      <!-- Ignition topic that the IMU publishes to -->
      <ign_topic>/imu</ign_topic>
      <!-- Message type conversion between Ignition and ROS -->
      <ros_type>sensor_msgs/msg/Imu</ros_type>
      <ign_type>ignition.msgs.IMU</ign_type>
    </plugin>

  </gazebo>

  
  
  <!-- Ackermann Control -->
  <ros2_control name="IgnitionSystem" type="system">

    <hardware>
      <plugin>ign_ros2_control/IgnitionSystem</plugin>
    </hardware>

    <joint name="rear_left_wheel_joint">
      <command_interface name="velocity" />
      <state_interface name="velocity" />
      <state_interface name="position" />
    </joint>

    <joint name="rear_right_wheel_joint">
      <command_interface name="velocity" />
      <state_interface name="velocity" />
      <state_interface name="position" />
    </joint>

    <joint name="left_wheel_steering_joint">
      <!-- <command_interface name="velocity" /> -->
      <command_interface name="position" />
      <state_interface name="position" />
    </joint>

    <joint name="right_wheel_steering_joint">
      <!-- <command_interface name="velocity" /> -->
      <command_interface name="position" />
      <state_interface name="position" />
    </joint>

  </ros2_control>

</robot>