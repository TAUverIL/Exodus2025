<?xml version="1.0"?>
<robot name="rover" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="inertial_macros.xacro.urdf"/>

  <!-- Colours -->
  <material name="Black">
    <color rgba="0 0 0 1" />
  </material>
  <material name="Grey">
    <color rgba="0.8 0.8 0.8 1" />
  </material>
  <material name="Orange">
    <color rgba="1 0.6 0 1" />
  </material>
  <material name="White">
    <color rgba="1 1 1 1" />
  </material>
  <material name="Blue">
    <color rgba="0.2 0.2 1 1" />
  </material>
  <material name="Red">
    <color rgba="1 0.2 0.2 1" />
  </material>
  
    <!-- Origin Parameters -->
    <xacro:property name="origin_xy" value="0 0 0"/>
    <xacro:property name="origin_rpy" value="0 0 0"/>
  
    <!-- Chassis Parameters -->
    <xacro:property name="chassis_length" value="0.66"/>
    <xacro:property name="chassis_width" value="0.55"/>
    <xacro:property name="chassis_height" value="0.11"/>
    <xacro:property name="chassis_offset_x" value="0"/>
    <xacro:property name="chassis_offset_y" value="0"/>
    <xacro:property name="chassis_offset_z" value="0.22"/>
    <xacro:property name="chassis_mass" value="20.0"/>

    <!-- Wheel Parameters -->
    <xacro:property name="pi_div_2" value="1.57"/>
    <xacro:property name="wheel_length" value="0.058"/>
    <xacro:property name="wheel_radius" value="0.0925"/>
    <xacro:property name="wheel_mass" value="1.5"/>
    <xacro:property name="wheel_offset_x" value="0.4"/>
    <xacro:property name="wheel_offset_y" value="0.32"/>
    <xacro:property name="wheel_offset_z" value="0.0925"/>
    <xacro:property name="wheel_damping" value="0.2"/>
    <xacro:property name="wheel_axis_right_front" value="0 0 1"/>
    <xacro:property name="wheel_axis_left_front" value="0 0 1"/>
    <xacro:property name="wheel_axis_right_rear" value="0 0 1"/>
    <xacro:property name="wheel_axis_left_rear" value="0 0 1"/>

    <!-- Steering Parameters -->
    <xacro:property name="steering_mass" value="1.0"/>
    <xacro:property name="steering_offset_x" value="0.4"/>
    <xacro:property name="steering_axis_left" value="0 1 0"/>
    <xacro:property name="steering_axis_right" value="0 1 0"/>
    <xacro:property name="steering_effort" value="20.0"/>
    <xacro:property name="steering_limit_upper" value="0.75"/>
    <xacro:property name="steering_limit_lower" value="-0.75"/>
    <xacro:property name="steering_velocity" value="0.5"/>

    <xacro:property name="M_PI"     value="3.1415926535897931" />
  
    <!-- Define the required parameters -->
    <xacro:arg name="multi_link" default="zed_multi_link" />
    <xacro:arg name="camera_name_0" default="zed_front" />
    <xacro:arg name="camera_name_1" default="zed_rear" />

    <!-- Define the reference links -->
    <link name="$(arg camera_name_0)_camera_link" />
    <link name="$(arg multi_link)" />
    <link name="$(arg camera_name_1)_camera_link" />

    <!-- Note the URDF of the cameras are loaded by the respective launch files.
        We must only provide the position of each of them with respect to the reference link -->

    <!-- Define the position of the front camera with respect to the reference link -->
    <joint name="$(arg camera_name_0)_camera_joint" type="fixed">
        <parent link="$(arg camera_name_0)_camera_link"/>
        <child link="$(arg multi_link)"/>
        <origin xyz="-0.06 0.0 0.0" rpy="0 0 0" />
    </joint>

    <!-- Define the position of the rear camera with respect to the reference link -->
    <joint name="$(arg camera_name_1)_camera_joint" type="fixed">
        <parent link="$(arg multi_link)"/>
        <child link="$(arg camera_name_1)_camera_link"/>
        <origin xyz="-0.06 0.0 0.0" rpy="0 0 ${M_PI}" />
    </joint>

    <!-- Base Link -->
    <joint name="base_link_joint" type="fixed">
        <parent link="$(arg camera_name_0)_camera_link"/>
        <child link="base_link"/>
        <origin xyz="0 0 -1.0" rpy="0 0 0"/>
    </joint>

    <link name="base_link" />

    <!-- Base_Footprint Link -->

    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <link name="base_footprint">
    </link>

  <!-- Chassis -->

  <!-- Chassis Fixed Joint -->
  <joint name="chassis_joint" type="fixed">

      <origin xyz="${chassis_offset_x} ${chassis_offset_y} ${chassis_offset_z}" rpy="0 0 0" />
      <parent link="base_link" />
      <child link="chassis" />

  </joint>
  
  <!-- Chassis Link -->
  <link name="chassis">

    <visual>
      <origin xyz="${chassis_offset_x}  ${chassis_offset_y} ${chassis_offset_z}" rpy="${origin_rpy}" />
      <geometry>
        <box size="${chassis_length} ${chassis_width} ${chassis_height}" />
      </geometry>
      <material name="Orange" />
    </visual>

    <collision>
        <origin xyz="${chassis_offset_x} 0 ${chassis_height/2}"/>
        <geometry>
            <box size="${chassis_length} ${chassis_width} ${chassis_height}"/>
        </geometry>
    </collision>

    <xacro:inertial_box mass="${chassis_mass}" x="${chassis_length}" y="${chassis_width}" z="${chassis_height}">
        <origin xyz="${chassis_length/2} 0 ${chassis_height/2}" rpy="${origin_rpy}"/>
    </xacro:inertial_box>

  </link>

  <!-- Rear Wheels -->

  <!-- Rear Left Wheel Link -->
  <link name="rear_left_wheel">

    <collision>
      <geometry>
        <cylinder length="${wheel_length}" radius="${wheel_radius}" />
      </geometry>
    </collision>

    <visual>
      <geometry>
        <cylinder length="${wheel_length}" radius="${wheel_radius}" />
      </geometry>
      <material name="Blue" />
    </visual>

    <xacro:inertial_cylinder mass="${wheel_mass}" length="${wheel_length}" radius="${wheel_radius}">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>

  </link>

  <joint name="rear_left_wheel_joint" type="continuous">

    <origin xyz="-${wheel_offset_x} ${wheel_offset_y} ${wheel_offset_z}" rpy="-${pi_div_2} 0 0" />
    <parent link="chassis" />
    <child link="rear_left_wheel" />
    <axis xyz="${wheel_axis_left_rear}" />
    <dynamics damping="${wheel_damping}" />

  </joint>

  <!-- Rear Right Wheel Link -->
  <link name="rear_right_wheel">

    <collision>
      <geometry>
        <cylinder length="${wheel_length}" radius="${wheel_radius}" />
      </geometry>
    </collision>

    <visual>
      <geometry>
        <cylinder length="${wheel_length}" radius="${wheel_radius}" />
      </geometry>
      <material name="Blue" />
    </visual>

    <xacro:inertial_cylinder mass="${wheel_mass}" length="${wheel_length}" radius="${wheel_radius}">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>

  </link>

  <joint name="rear_right_wheel_joint" type="continuous">

    <origin xyz="-${wheel_offset_x} -${wheel_offset_y} ${wheel_offset_z}" rpy="-${pi_div_2} 0 0" />
    <parent link="chassis" />
    <child link="rear_right_wheel" />
    <axis xyz="${wheel_axis_right_rear}" />
    <dynamics damping="${wheel_damping}" />

  </joint>

  <!-- Front Wheels -->

  <!-- Left Steering Link -->
  <link name="left_wheel_steering">

    <inertial>
      <mass value="${steering_mass}"/>
      <inertia ixx="0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0" />
    </inertial>

  </link>

  <joint name="left_wheel_steering_joint" type="revolute">

    <origin xyz="${steering_offset_x} ${wheel_offset_y} ${wheel_offset_z}" rpy="-${pi_div_2} 0 0" />
    <parent link="chassis" />
    <child link="left_wheel_steering" />
    <axis xyz="${steering_axis_left}" />
    <dynamics damping="${wheel_damping}" />
    <limit effort="${steering_effort}" lower="${steering_limit_lower}" upper="${steering_limit_upper}" velocity="${steering_velocity}"/>

  </joint>

  <!-- Right Steering Link -->
  <link name="right_wheel_steering">

    <inertial>
      <mass value="${steering_mass}"/>
      <inertia ixx="0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0" />
    </inertial>

  </link>

  <joint name="right_wheel_steering_joint" type="revolute">

    <origin xyz="${steering_offset_x} -${wheel_offset_y} ${wheel_offset_z}" rpy="-${pi_div_2} 0 0" />
    <parent link="chassis" />
    <child link="right_wheel_steering" />
    <axis xyz="${steering_axis_right}" />
    <dynamics damping="${wheel_damping}" />
    <limit effort="${steering_effort}" lower="${steering_limit_lower}" upper="${steering_limit_upper}" velocity="${steering_velocity}"/>

  </joint>

  <!-- Front Left Wheel Link -->
  <link name="front_left_wheel">

    <collision>
      <geometry>
        <cylinder length="${wheel_length}" radius="${wheel_radius}" />
      </geometry>
    </collision>

    <visual>
      <geometry>
        <cylinder length="${wheel_length}" radius="${wheel_radius}" />
      </geometry>
      <material name="Black" />
    </visual>

    <xacro:inertial_cylinder mass="${wheel_mass}" length="${wheel_length}" radius="${wheel_radius}">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>

  </link>

  <joint name="front_left_wheel_joint" type="continuous">

    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="left_wheel_steering" />
    <child link="front_left_wheel" />
    <axis xyz="${wheel_axis_left_front}" />
    <dynamics damping="${wheel_damping}" />

  </joint>

  <!-- Front Right Wheel Link -->
  <link name="front_right_wheel">

    <collision>
      <geometry>
        <cylinder length="${wheel_length}" radius="${wheel_radius}" />
      </geometry>
    </collision>

    <visual>
      <geometry>
        <cylinder length="${wheel_length}" radius="${wheel_radius}" />
      </geometry>
      <material name="Black" />
    </visual>

    <xacro:inertial_cylinder mass="${wheel_mass}" length="${wheel_length}" radius="${wheel_radius}">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>

  </link>

  <joint name="front_right_wheel_joint" type="continuous">

    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="right_wheel_steering" />
    <child link="front_right_wheel" />
    <axis xyz="${wheel_axis_right_front}" />
    <dynamics damping="${wheel_damping}" />

  </joint>
  
  <!-- Ackermann Control -->

  <ros2_control name="CubemarsSystem" type="system">

    <hardware>
      <plugin>cubemars_interface/CubeMarsSystemHardware</plugin>
      <param name="can_interface">slcan0</param>
    </hardware>

    <joint name="rear_right_wheel_joint">
      <param name="can_id">12</param>
      <param name="pole_pairs">21</param>
      <param name="gear_ratio">9</param>
      <param name="kt">0.1</param>
      <command_interface name="velocity"/>
      <state_interface name="velocity" />
      <state_interface name="position" />
    </joint>

    <joint name="rear_left_wheel_joint">
      <param name="can_id">14</param>
      <param name="pole_pairs">21</param>
      <param name="gear_ratio">9</param>
      <param name="kt">0.1</param>
      <command_interface name="velocity"/>
      <state_interface name="velocity" />
      <state_interface name="position" />
    </joint>

    <joint name="front_left_wheel_joint">
      <param name="can_id">13</param>
      <param name="pole_pairs">21</param>
      <param name="gear_ratio">9</param>
      <param name="kt">0.1</param>
      <state_interface name="velocity" />
      <state_interface name="position" />
    </joint>

    <joint name="front_right_wheel_joint">
      <param name="can_id">11</param>
      <param name="pole_pairs">21</param>
      <param name="gear_ratio">9</param>
      <param name="kt">0.1</param>
      <state_interface name="velocity" />
      <state_interface name="position" />
    </joint>

    <joint name="left_wheel_steering_joint">
      <param name="can_id">3</param>
      <param name="pole_pairs">21</param>
      <param name="gear_ratio">9</param>
      <param name="kt">0.1</param>
      <param name="enc_off">-0.478</param>
      <command_interface name="position" />
      <state_interface name="position" />
    </joint>

    <joint name="right_wheel_steering_joint">
      <param name="can_id">1</param>
      <param name="pole_pairs">21</param>
      <param name="gear_ratio">9</param>
      <param name="kt">0.1</param>
      <param name="enc_off">0.271</param>
      <command_interface name="position" />
      <state_interface name="position" />
    </joint>

  </ros2_control>

</robot>